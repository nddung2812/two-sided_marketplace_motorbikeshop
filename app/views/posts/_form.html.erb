
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :used_vehicle %>
    <%= f.input :make, collection: ["Honda", "Yamaha", "Suzuki", "Ducati", "MV Augusta", "KTM", "BMW", "Kawasaki"] %>
    <%= f.input :model, collection: 2010..2021 %>
    <br>
    <!--To attach photo-->
    <%= f.file_field :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:class => "btn btn-primary post_button"  %>
  </div>  
<% end %>
